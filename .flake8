[flake8]

# set line-length for black support
# https://github.com/psf/black/blob/master/docs/compatible_configs.md
max-line-length = 88

extend-exclude =
    # ignore cache and venv directory for CI
    .cache
    .venv

extend-ignore =
    # ignore E203 because black might reformat it
    E203,
    # do not require type annotations for self nor cls
    ANN101,
    ANN102,
    # do not require docstrings for __init__ methods
    D107,

# configure flake8-docstrings
# https://pypi.org/project/flake8-docstrings/
docstring-convention = google
